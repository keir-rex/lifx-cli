<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple Computer//DTD PLIST 1.0//EN" \
 "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>custom.desklight</string>
  <key>LowPriorityIO</key>
  <true/>
  <key>ProgramArguments</key>
  <array>
    <string>/usr/local/bin/xpc_set_event_stream_handler</string>
    <string>/Users/Shared/bin/desklight.sh</string>
  </array>
  <key>LaunchEvents</key>
  <dict>
    <key>com.apple.iokit.matching</key>
    <dict>
      <key>com.apple.device-attach</key>
      <dict>
        <key>DisplayProductID</key>
        <integer>30424</integer>
        <key>DisplayVendorID</key>
        <integer>7789</integer>
        <key>DisplayProductName</key>
        <string>LG ULTRAWIDEs</string>
      </dict>
    </dict>
  </dict>
  <key>RunAtLoad</key>
  <true/>
  <key>StandardOutPath</key>
  <string>/tmp/custom.desklight.stdout</string>
  <key>StandardErrorPath</key>
  <string>/tmp/custom.desklight.stderr</string>
</dict>
</plist>